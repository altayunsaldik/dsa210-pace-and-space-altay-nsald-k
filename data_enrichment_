import pandas as pd
import time


seasons = range(2001, 2026) # 2000-01 sezonu 2001 olarak ge√ßer
all_data = []

for year in seasons:
    url = f"https://www.basketball-reference.com/leagues/NBA_{year}_stats.html"
    
    
    tables = pd.read_html(url)
    per_game_df = tables[0] # Genelde ilk tablo per game istatistikleridir
    
    
    per_game_df['Year'] = year
    all_data.append(per_game_df)
    

    time.sleep(2)

final_df = pd.concat(all_data)
