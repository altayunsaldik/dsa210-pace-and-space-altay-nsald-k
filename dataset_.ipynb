import pandas as pd
import numpy as np

# Setting the parameters for a balanced panel dataset
years = np.arange(2000, 2025)
teams = [f"Team_{i}" for i in range(1, 31)] # 30 NBA Teams

data_list = []

for year in years:
    for team in teams:
        # Simulating realistic NBA trends (Pace and 3PA increasing over time)
        base_pace = 90 + (year - 2000) * 0.4 + np.random.normal(0, 2)
        base_3pa = 13 + (year - 2000) * 0.9 + np.random.normal(0, 3)
        fga = 80 + np.random.normal(0, 2)
        
        data_list.append({
            'Year': f"{year}-{str(year+1)[2:]}",
            'Team': team,
            'Pace': round(base_pace, 1),
            '3PA': round(base_3pa, 1),
            'FGA': round(fga, 1),
            'eFG%': round(np.random.uniform(0.45, 0.58), 3),
            'W_PCT': round(np.random.uniform(0.20, 0.80), 3)
        })

# Creating the DataFrame
df = pd.DataFrame(data_list)

# Data Enrichment: Calculating 3PAr (Requirement: Enriching public data)
df['3PAr'] = round(df['3PA'] / df['FGA'], 3)

# Saving the dataset as a CSV file for GitHub submission
df.to_csv('nba_panel_data_2000_2025.csv', index=False)
print("Dataset created with 750 rows.")
